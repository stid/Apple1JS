{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["es5", "es6", "dom"],
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "types": [
        "dom",
        "node",
      ],
      "typeRoots": [
        "core/@types",
        "node_modules/@types"
      ]
    }
}